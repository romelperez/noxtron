{
  "name": "noxtron",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Real-Time JavaScript/TypeScript UI playground application",
  "keywords": [
    "typescript",
    "ui",
    "sandbox",
    "playground",
    "application"
  ],
  "homepage": "https://github.com/romelperez/noxtron",
  "repository": {
    "type": "git",
    "url": "https://github.com/romelperez/noxtron.git"
  },
  "funding": "https://github.com/sponsors/romelperez",
  "license": "MIT",
  "engines": {
    "node": "^16.14",
    "npm": "^8.3"
  },
  "files": [
    "build"
  ],
  "types": "./build/cjs/apps/index.d.ts",
  "main": "./build/cjs/apps/index.js",
  "bin": {
    "noxtron": "./build/cjs/cli/index.js"
  },
  "peerDependencies": {
    "react": "17",
    "react-dom": "17"
  },
  "dependencies": {
    "@babel/standalone": "^7.17.8",
    "@emotion/react": "^11.8.2",
    "@mdi/js": "^6.6.95",
    "@mdi/react": "^1.5.0",
    "@monaco-editor/react": "^4.3.1",
    "@types/babel__standalone": "^7.1.4",
    "@types/lodash": "^4.14.180",
    "@types/react-router-dom": "^5.3.3",
    "empanada": "^0.1.3",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.33.0",
    "motion": "^10.7.0",
    "react-router-dom": "^6.2.2",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^7.0.3",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.8",
    "typescript": "4.5.x",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "scripts": {
    "lint": "prettier --check .",
    "lint-fix": "prettier --write .",
    "test": "jest",
    "test-watch": "jest --watch",
    "clean": "rm -rf ./build && rm -f .tsbuildinfo",
    "build": "sh ./scripts/build-cjs.sh",
    "dev": "sh ./scripts/build-cjs.sh --watch",
    "e2e-clean": "rm -rf ./e2e/build",
    "e2e-build": "cross-env NODE_ENV=production webpack --config ./e2e/webpack.config.js --progress",
    "e2e-dev": "webpack serve --config ./e2e/webpack.config.js",
    "prepublishOnly": "npm run clean && npm run build && npm run e2e-clean && npm run e2e-build && npm run lint && npm run test"
  }
}
