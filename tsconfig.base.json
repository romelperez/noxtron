{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2015",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@src": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
